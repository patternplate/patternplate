{
  "name": "patternplate",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream --include-filtered-dependencies",
    "clean": "npx lerna clean --yes && npx lerna run clean && npx rimraf node_modules",
    "components": "yarn lerna exec \"patternplate start\" --scope=@patternplate/components",
    "reinstall": "yarn clean && yarn && lerna bootstrap",
    "start": "yarn lerna run watch --stream --parallel --include-filtered-dependencies"
  },
  "author": {
    "name": "Mario Nebl",
    "email": "mario.nebl@sinnerschrader.com"
  },
  "repository": {
    "type": "git",
    "url": "sinnerschrader/patternplate"
  },
  "xo": {
    "esnext": true,
    "extends": [
      "prettier",
      "xo-react"
    ],
    "plugins": [
      "patternplate"
    ],
    "rules": {
      "ava/no-ignored-test-files": [
        0
      ],
      "ava/no-async-fn-without-await": [
        0
      ],
      "capitalized-comments": [
        0
      ],
      "import/prefer-default-export": [
        0
      ],
      "import/order": [
        0
      ],
      "func-names": [
        0
      ],
      "no-return-await": [
        0
      ],
      "react/forbid-component-props": [
        0
      ],
      "react/jsx-indent": [
        0
      ],
      "react/jsx-indent-props": [
        0
      ],
      "react/jsx-sort-props": [
        0
      ],
      "react/jsx-tag-spacing": [
        0
      ],
      "react/prop-types": [
        0
      ]
    },
    "ignores": [
      "distribution/**/*",
      "packages/**/application/**",
      "packages/**/binary/**",
      "packages/**/library/**",
      "packages/**/lib/**",
      "**/*.bundle.js"
    ]
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-plugin-patternplate": "^1.0.1",
    "eslint-plugin-react": "^7.3.0",
    "husky": "^0.14.3",
    "lerna": "^2.8.0",
    "lint-staged": "^4.2.3",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.2",
    "stmux": "^1.4.18",
    "xo": "^0.18.2",
    "yarn": "^1.3.2"
  },
  "engines": {
    "node": ">= 4",
    "npm": ">= 3"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
