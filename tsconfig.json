{
  "files": [],
  "include": [],
  "references": [
    {"path": "./components"},
    {"path": "./packages"},
    {"path": "./tools"}
  ],
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "plugins": [
      {
        "transform": "ts-transform-json-schema",
        "type": "program",
        "options": {
          "refs": true,
          "noExtraProps": false,
          "strictNullChecks": true,
          "required": true
        }
      }
    ]
  }
}
