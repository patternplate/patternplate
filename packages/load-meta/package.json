{
  "name": "@patternplate/load-meta",
  "version": "3.0.0-alpha.0",
  "description": "Load patternplate meta data",
  "scripts": {
    "start": "yarn build -w",
    "build": "babel -D src -d lib --source-maps --ignore **/*.test.js",
    "clean": "rimraf lib",
    "watch": "yarn build -w",
    "deps": "dependency-check . --missing && dependency-check . --extra --no-dev"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "xo": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patternplate/patternplate.git"
  },
  "bugs": {
    "url": "https://github.com/patternplate/patternplate/issues"
  },
  "homepage": "https://github.com/patternplate/patternplate#readme",
  "author": {
    "name": "Mario Nebl",
    "email": "mario.nebl@sinnerschrader.com"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@marionebl/sander": "^0.6.1",
    "@patternplate/load-doc": "^3.0.0-alpha.0",
    "@patternplate/load-manifest": "^3.0.0-alpha.0",
    "globby": "^6.1.0",
    "load-source-map": "^1.0.0",
    "p-filter": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@patternplate/babel-preset": "^3.0.0-alpha.0",
    "dependency-check": "^3.1.0",
    "fixturez": "^1.1.0"
  }
}
