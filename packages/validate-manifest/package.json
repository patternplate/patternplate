{
  "name": "@patternplate/validate-manifest",
  "version": "3.0.1",
  "description": "Validate schema for pattern.json",
  "scripts": {
    "watch": "ttsc -w",
    "deps": "dependency-check . --missing && dependency-check . --extra --no-dev",
    "build": "ttsc",
    "test": "jest"
  },
  "typings": "lib/index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "lib"
