{
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./lib/",
    "rootDir": "./src",
    "sourceMap": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
