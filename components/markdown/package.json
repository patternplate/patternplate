    "parse-numeric-range": "^0.0.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-addons-text-content": "^0.0.4",
    "remark": "^10.0.1",
    "remark-gemoji-to-emoji": "^1.1.0",
    "remark-react": "^4.0.3",
    "styled-components": "^4.1.1",
    "tag-hoc": "^1.0.0"
  }
